@model List<Painter>
@{
}

<h1>Добро пожаловать на страницу художников!</h1>
<div class="col-12" border p-3 mt-3>
    <form method="post">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th></th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Отчество</th>
                        <th>Страна</th>
                        <th>Возраст</th>
                        <th>Место рождения</th>
                        <th>Дата рождения</th>
                        <th>Место смерти</th>
                        <th>Дата смерти</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var painter in @Model)
                    {
                        <tr>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-route-Id="@painter.Id" asp-action="PainterReport" class="btn btn-primary mx-2">
                                        Отчет
                                    </a>
                                </div>
                            </td>
                            <td>@painter.LastName</td>
                            <td> @painter.FirstName</td>
                            <td>@painter.FathersName</td>
                            <td>@painter.Country</td>
                            <td>@painter.Age</td>
                            <td>@painter.BirthPlace</td>
                            <td>@painter.BirthDate.Value.ToShortDateString()</td>
                            <td>@painter.DeathPlace</td>
                            <td>@painter.DeathDate.Value.ToShortDateString()</td>
                        </tr>

                    }
                </tbody>
            </table>

        }
        else
        {
            <p>В галерее нет художников</p>
        }
    </form>
</div>
