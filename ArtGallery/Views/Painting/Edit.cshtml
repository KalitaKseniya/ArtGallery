@model ArtGallery.Models.Painting

<form method="post" asp-action="Edit">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Редактировать картину</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">Название</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Year">Год</label>
                    </div>
                    <div class="col-8">
                        <input type="number" asp-for="Year" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medium">Материал</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Medium" />
                        <span asp-validation-for="Medium" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Size_x">Длина</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Size_x" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Size_y">Высота</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Size_y" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description">Описание</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="PainterId">Художник</label>
                    </div>
                    <div class="col-8">
                        <select asp-for="PainterId" asp-items="ViewBag.Painters"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ArtMovements">Направление</label>
                    </div>
                    <div class="col-8">
                        <select multiple asp-for="ArtMovements" asp-items="ViewBag.ArtMovements"></select>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Обновить" class="btn btn-info w-100" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}