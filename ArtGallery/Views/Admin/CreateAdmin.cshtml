@model ArtGallery.Models.Admin

<form method="post" asp-controller="Admin" asp-action="CreateAdmin">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Добавить администратора</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Login">Логин</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Login" />
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Password">Пароль</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Добавить" class="btn btn-info w-100" />
                        </div>
                        <div class="col">
                            <a asp-action="Admins" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}