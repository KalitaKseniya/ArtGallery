@model List<ArtGallery.Models.ArtMovement>

<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-primary">Добро пожаловать на страницу направлений</h2>
    </div>
    <div class="col-6">
        <a asp-controller="ArtMovement" asp-action="Create" class="btn btn-primary">
            Добавить направление
        </a>
    </div>
</div>
<div class="col-12" border p-3 mt-3>
    <form method="post">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <thead>
                    <tr class="table-secondary">
                        <th></th>
                        <th>Название</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var art in @Model)
                    {
                        <tr>
                            <td>
                                <div class="text-center">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-route-Id="@art.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                            Редактировать
                                        </a>
                                        <a asp-route-Id="@art.Id" asp-action="Delete" onclick="return confirm('Вы уверены, что хотите удалить направление?')" class="btn btn-danger mx-2">
                                            Удалить
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td>@art.Name</td>
                        </tr>

                    }
                </tbody>
            </table>

        }
        else
        {
            <p>В таблице нет направлений</p>
        }
    </form>
</div>
